@import "./../components/login.wxss";
.header {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #323340;
  color: #f5f5f5;
  height: 44px;
  width: 100%;
  padding-left: 40px;
}
.header image {
  height: 44px;
  width: 100px;
}
.body {
  height: 100%;
  width: 100%;
  padding-bottom: 32px;
  background: #E6E6E5FF;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.footer {
  background: #323340;
  color: #f5f5f5;
  position: absolute;
  bottom: 0px;
  height: 32px;
  width: 100%;
  display: flex;
  align-items: center;
  /*垂直居中*/
  justify-content: center;
  /*水平居中*/
}
.shadow {
  padding: 10px;
  border-radius: 3px;
  background-color: rgba(0, 0, 0, 0.5);
}
.mask-block {
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
}
